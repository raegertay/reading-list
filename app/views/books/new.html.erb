<div class='container'>
  <div class='jumbotron'>

    <h1 class='section-title text-center'>New Book</h1>

    <%= simple_form_for @book, url: books_path, method: :post, html: {class: 'form-horizontal'} do |f| %>

    <%= f.input :name, label: 'Name', placeholder: "Book's name", error: 'Name is mandatory' %>
    <%= f.input :author, label: 'Author', placeholder: "Author's name", error: 'Author is mandatory' %>
    <%= f.input :hasRead, label: 'Read?' %>

    <%= f.button :submit, "Create" %>

    <% end %>

    <br />

    <%= link_to 'Back', books_path %>

  </div>
</div>
