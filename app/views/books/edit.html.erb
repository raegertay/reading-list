<h1>Edit Book</h1>

<%= form_for @book, url: book_path, method: :put do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= radio_button_tag(:hasRead, false, checked = (@has_read == false)) %>
    <%= label_tag(:hasRead_false, 'Not yet read') %>
    <%= radio_button_tag(:hasRead, true, checked = (@has_read == true)) %>
    <%= label_tag(:hasRead_true, 'Already read') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', books_path %>
